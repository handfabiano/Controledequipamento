{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Iniciar Backend",
      "type": "shell",
      "command": "npm run dev",
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "starting",
          "endsPattern": "Servidor rodando"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "servidor"
      }
    },
    {
      "label": "Iniciar Frontend",
      "type": "shell",
      "command": "npm start",
      "options": {
        "cwd": "${workspaceFolder}/client"
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Starting",
          "endsPattern": "webpack compiled|Compiled successfully"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "servidor"
      }
    },
    {
      "label": "Iniciar Backend + Frontend",
      "dependsOn": ["Iniciar Backend", "Iniciar Frontend"],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always"
      }
    },
    {
      "label": "Instalar DependÃªncias",
      "type": "shell",
      "command": "npm install && cd client && npm install",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    }
  ]
}
